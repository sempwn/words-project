<h1> Words </h1>
<%= link_to 'New', action: :new %>
<table id="wordTable" class="table table-striped">
	<thead>
		<tr>
			<th>Word</th>
			<th>Description</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
	<% @words.each do |word| %>
		<tr>
			<td><%= word.name %></td>
			<td><%= truncate(word.description) %></td>
			<td><%= link_to 'Show', word_path(word) %></td>
			<% if admin_signed_in? %>
			<td><%= link_to 'Edit', edit_word_path(word) %></td>
			<td><%= link_to 'Destroy', word_path(word),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
          </td>
          <% end %>
		</tr>
	<% end %>
	</tbody>
</table>

<script>
$( document ).ready(function(){
	$("#wordTable").tablesorter();	
});
</script>